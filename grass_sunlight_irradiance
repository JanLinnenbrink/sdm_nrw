r.import dgm_ex.tif output=dgm
g.region raster=dgm

# mode 2: irradiation (W h m-2)
r.sun.hourly elevation=dgm year=2022 day=200  start=4 end=22 time_step=1 beam_rad_basename=beam_m2_step_long mode=mode2 nprocs=4 -t --overwrite
# cumulative:
r.sun.hourly elevation=dgm year=2022 day=200  start=4 end=22 time_step=1 beam_rad_basename=beam_m2_step_long_cum mode=mode2 nprocs=4 -tc --overwrite

